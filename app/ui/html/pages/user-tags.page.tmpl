{{template "gallery" .}}

{{define "title"}}Tags{{end}}

{{define "pagemeta"}}
	<meta name="description" content="Slideshows tagged.">
    <meta name="robots" content="noindex">
{{end}}

{{define "page"}}
  <div class="container">
    <h3>Tags</h3>

    <div>
      {{range .Tags}}
        <div class="row">
          <div class="col-md-4">
            <a class='btn btn-light' href='/to-do/0/{{.Parent}}/{{.Name}}/20'>{{.Name}}</a>
          </div>
          <div class="col-md-1">
            <span class="badge badge-primary badge-pill">{{.Count}}</span>
          </div>
        </div>

        {{range .Tags}}
          <div class="row">
            <div class="col-4 offset-4">
              <a class='btn btn-primary' href='/to-do/0/{{.Parent}}/{{.Name}}/20'>{{.Name}}</a>
            </div>
            <div class="col-4">
              <span class="badge badge-primary badge-pill">{{.Count}}</span>
            </div>
          </div>
        {{end}}
      {{end}}
    </div>
{{end}}