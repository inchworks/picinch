{{template "gallery" .}}

{{define "title"}}Profile{{end}}

{{define "pagemeta"}}
    <meta name="robots" content="noindex">
{{end}}

{{define "page"}}
    <h2>Profile</h2>
    {{with .User}}
     <table>
        <tr>
            <th>Display Name</th>
            <td>{{.DisplayName}}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{.Username}}</td>
        </tr>
        <tr>
            <th>Joined</th>
            <td>{{humanDate .Created}}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td><a href="/user/change-password">Change password</a></td>
        </tr>
    </table>
    {{end }}
{{end}}