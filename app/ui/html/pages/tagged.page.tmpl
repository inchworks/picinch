{{template "gallery" .}}

{{define "title"}}{{ .Parent }}{{ .Tag }}{{end}}

{{define "pagemeta"}}
	<meta name="description" content="Tagged slideshows.">
    <meta name="robots" content="noindex">
{{end}}

{{define "page"}}
	<div class="container">
		<h2>{{ .Topic }}{{ .Parent }}{{ .Tag }}</h2>
	</div>

	<div class="container">
		<div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 mb-4">
			{{range .Slideshows}}
				<div class="col mb-4">
					<div class="card text-white bg-dark h-100">
						<div class="card-body">
							<a class="card-link text-light" href="/viewTagged/{{ .Id }}/0">
								<img class="card-img-top" src="{{thumbnail .Image }}">
								<h5 class="card-title">{{ .Title }}</h5>
								<p class="card-text">{{ .DisplayName }}</p>
							</a>
							<div class="text-right mt-2">
								<a href="/tag/{{ .Id }}" class="btn btn-secondary">Tag</a>
							</div>
						</div>
					</div>
				</div>
			{{end}}
		</div>
	</div>
{{end}}