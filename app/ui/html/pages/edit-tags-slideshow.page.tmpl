{{template "gallery" .}}

{{define "title"}}Tag Slideshow{{end}}

{{define "pagemeta"}}
    <meta name="robots" content="noindex">
{{end}}

{{define "page"}}

	<div class="container">
		<h3>{{ .Title }}</h3>

		<form action='/tag-slideshow' method='POST'>
            <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
 			{{with .Form}}
			    <input type='hidden' name='nShow' value='{{.Get "nShow"}}'>
			    <input type='hidden' name='nRoot' value='{{.Get "nRoot"}}'>
			{{end}}	
			{{range .Users}}
				<h4>{{.Name}}</h4>
				{{range .Tags }}
					{{.TagHTML}}
					{{range .Tags}}
						{{.TagHTML}}
						{{range .Tags}}
							{{.TagHTML}}
						{{end}}
					{{end}}
				{{end}}
			{{end}}
			<div class="form-group row">
				<div class="col-md-3">
					<button type='submit' class="btn btn-primary" id='submit'>Update</button>
				</div>
			</div>
		</form>
	</div>	
{{end}}

{{ define "pagescripts" }}
   <script type="text/javascript" src='/static/js/setup-02.js'></script>
   <script>
		// page-specific processing
		function childAdded($prototype, $newForm) {}
		function pageReady() {}
    </script>
{{end}}
