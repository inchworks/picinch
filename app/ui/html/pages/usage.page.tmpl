{{template "gallery" .}}

{{define "title"}}{{ .Title }}{{end}}

{{define "pagemeta"}}
    <meta name="robots" content="noindex">
{{end}}

{{define "page"}}

	<div class="container">
		<h3>{{ .Title }}</h3>

       <div>
            {{range .Usage}}
 		        <h4>{{ .Date }}</h4>
                <table class="table table-sm table-striped">
                    <tbody>
                        {{range .Stats}}
                            <tr>
                                <td>{{ .Category }}</td>
                                <td>{{ .Event }}</td>
                                <td>{{ .Count }}</td>
                           </tr>
                        {{end}}
                    </tbody>
                </table>
             {{end}}
        </div>
	</div>	

{{end}}
