{{define "fullscreen"}}
<!doctype html>
<html lang='en'>
    <head>
        <meta charset='utf-8'>
    	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>{{template "title" .}} / {{block "website" .}}PicInch Gallery{{end}}</title>
        {{block "pagemeta" .}}
        {{end}}

        {{block "fullscreenStylesheets" .}}
			{{template "bootstrapStylesheet" .}}
			<link rel='stylesheet' href='/static/css/fullscreen-05.css'>
		{{end}}

        {{block "fullscreenHeadscripts" .}}
			{{template "jqueryScript" .}}
        {{end}}

        {{block "favicons" .}}
        {{end}}

    </head>
    <body>
        {{template "fullscreenContent" .}}
        {{template "fullscreenScripts" .}}
    </body>
</html>
{{end}}

{{define "fullscreenContent"}}
	<div id="slideshow1" class="carousel slide carousel-fade" data-interval="false" data-keyboard="false">
		<div class="carousel-inner">
    		{{template "slides" .}}
		</div>
		<a class="carousel-control-prev slideshow-button" href="#slideshow1" role="button" data-slide="prev">
    		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
    		<span class="sr-only">Previous</span>
 		 </a>
  		<a class="carousel-control-next slideshow-button" href="#slideshow1" role="button" data-slide="next">
    		<span class="carousel-control-next-icon" aria-hidden="true"></span>
    		<span class="sr-only">Next</span>
  		</a>
 		<a class="slideshow-control-quit slideshow-button" href="#slideshow1" role="button" data-slide="quit">
    		<span class="slideshow-control-quit-icon" aria-hidden="true"></span>
    		<span class="sr-only">Quit</span>
  		</a>
	</div>
{{end}}

{{define "fullscreenScripts"}}
	{{template "bootstrapScript" .}}
   	<script type="text/javascript" src='/static/js/carousel-03.js'></script>
	{{block "pagescripts" .}}
	{{end}}

	<script>
		// Locations when slideshow ends
		gblAfter = "{{ .AfterHRef }}";
		gblBefore = "{{ .BeforeHRef }}";
		gblParent = "{{ .ParentHRef }}";

		// Buttons displayed?
		gblButtons = true;
	</script>
{{end}}
