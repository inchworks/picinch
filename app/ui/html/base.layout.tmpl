{{define "base"}}
<!doctype html>
<html lang='en'>
    <head>
        <meta charset='utf-8'>
        {{block "meta" .}}
        {{end}}

        <title>{{template "title" .}} / {{block "website" .}}PicInch{{end}}</title>
        {{block "pagemeta" .}}
        {{end}}

        {{block "stylesheets" .}}
        {{end}}

        {{block "headscripts" .}}
        {{end}}

        {{block "favicons" .}}        
