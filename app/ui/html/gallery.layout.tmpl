{{/* Layout for normal gallery pages. */}}

{{define "gallery"}}
<!doctype html>
<html lang='en'>
    <head>
        <meta charset='utf-8'>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>{{template "title" .}} / {{block "website" .}}PicInch Gallery{{end}}</title>
        {{block "pagemeta" .}}
        {{end}}

        {{block "galleryStylesheets" .}}
            {{template "bootstrapStylesheet" .}}
            {{template "lightboxStylesheet" .}}
            <link rel='stylesheet' href='/static/css/gallery-03.css'>
            {{block "siteStyle" .}}
            {{end}}
        {{end}}

        {{block "galleryHeadscripts" .}}
            {{template "jqueryScript" .}}
        {{end}}

        {{block "favicons" .}}
        {{end}}

    </head>
    <body>
        {{template "galleryContent" .}}
        {{template "galleryScripts" .}}
    </body>
</html>
{{end}}

{{/* Alias for webparts pages. */}}
{{define "layout"}}
	{{template "gallery" .}}
{{end}}

{{define "galleryContent"}}
	<!-- // Copyright © Rob Burke, Inchworks, 2020. -->
	
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="/"><img class="d-inline-block align-top" height="31" src="/static/images/brand.png"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    {{if .IsAdmin}}
                        {{template "menu-admin" .}}
                    {{end}}
                    {{if .IsCurator}}
                        {{template "menu-curator" .}}
                    {{end}}
                    {{if .IsAuthenticated}}
                        {{template "menu-authenticated" .}}
                        {{if .IsCompetition}}
                            {{template "menu-competition" .}}
                        {{end}}
                    {{else}}
                        {{template "menu-public" .}}
                    {{end}}
                </ul>
            </div>
        </nav>
    </div>

    {{block "pageHeader" .}}
    {{end}}

    {{with .Flash}}
        <div class="container">
            <div class='alert alert-success'>{{.}}</div>
        </div>
    {{end}}

    {{template "page" .}}
{{end}}

{{define "galleryScripts"}}
    {{template "bootstrapScript" .}}
    {{template "lightboxScript" .}}
    <script>
        $('a[href="' + this.location.pathname + '"]').closest('li').addClass('active');
    </script>
	{{block "pagescripts" .}}
	{{end}}
{{end}}
